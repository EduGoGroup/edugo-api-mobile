    s3Client, err := s3.NewS3Client(ctx, cfg.Storage.S3, log)
    if err != nil {
        log.Warn("Failed to initialize S3", zap.Error(err))
        // Continuar sin S3...
    }
    
    // Crear container
    c := container.NewContainer(log, pgDB, mongoDB, publisher, s3Client, cfg.Auth.JWTSecret)
    
    // Setup router y servidor
