{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch API (with .env)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/main.go",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Launch API (explicit vars - backup)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/main.go",
      "env": {
        "APP_ENV": "local",
        "DATABASE_POSTGRES_PASSWORD": "edugo123",
        "DATABASE_MONGODB_URI": "mongodb://edugo:edugo123@localhost:27017/edugo?authSource=admin",
        "MESSAGING_RABBITMQ_URL": "amqp://edugo:edugo123@localhost:5672/",
        "STORAGE_S3_ACCESS_KEY_ID": "test-access-key-id",
        "STORAGE_S3_SECRET_ACCESS_KEY": "test-secret-access-key",
        "STORAGE_S3_BUCKET_NAME": "edugo-materials",
        "JWT_SECRET": "dev-secret-key-change-in-production"
      }
    },
    {
      "name": "Launch API (with script)",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/scripts/load-env.sh",
      "args": ["go", "run", "${workspaceFolder}/cmd/main.go"]
    },
    {
      "name": "Debug Current File",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
